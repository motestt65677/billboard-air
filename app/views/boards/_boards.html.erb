<div class="row">
  <%boards.each do |board|%>
    <div class="col-12 col-sm-6 col-md-4 col-lg-3 .col-xl-2">
      <%=link_to user_board_path(board.user, board), class:"list-group-item list-group-item-action list-group-item-light" do%>
        <p><strong>Title:</strong>  <%=board.title%></p>
        <p><strong>Location: </strong> <%=board.location%></p>
      <%end%>
      <p>&nbsp</p>
      <%if @user == board.user%>
        <p> <%=link_to "edit", edit_user_board_path(board.user, board), class:"btn btn-outline-primary btn-block"%></p>
        <p> <%= link_to 'Delete',
              user_board_path(board.user, board), 
              method: :delete, 
              data: { confirm: 'Are you sure?' }, class:"btn btn-outline-danger btn-block" %></p>
      <%end%>
    </div>
  <%end%> 
</div>