<div class="container">
  <h1 class="align_center mt-5">My Boards</h1>
  <div class="mt-3 mb-5">
    <%=form_tag search_boards_path, method: :post, remote: true do %>
      <%=text_field_tag :search_result, nil, class:"text_box"%>  
      <%=submit_tag "Look Up"%>
      <%=link_to "New Board", new_user_board_path(current_user), class:"float-right"%>    
    <%end%>
    
  </div>

  <div id="boards">
    <%=render partial: "boards", locals: {boards: @boards}%>
  </div>
</div>
