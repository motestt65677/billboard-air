<main class="container mt-5 mb-5">
  <div class="row">
    <div class="col-3"></div>
    <div class="col-6">
      <h1>New Auction</h1>
      <%=form_for [@board, @timeslot] do |f|%>
        <div>
          <%=f.label :start_date%><br>
          <%=f.date_field :start_date, class:"text_box"%>
        </div>
        <div>
          <%=f.label :end_date%><br>
          <%=f.date_field :end_date, class:"text_box"%>
        </div>
        <div>
          <%=f.label "starting price"%><br>
          <%=f.number_field :current_price, class:"text_box"%>
        </div>
        <%=f.submit "Create"%>
      <%end%>      
    </div>
    <div class="col-3"></div>
  </div>
</main>
