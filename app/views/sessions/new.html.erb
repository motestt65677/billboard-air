<main class="container mt-10">
  <div class="row">
    <div class="col-3"></div>
    <div class="col-6">
      <h1>Sign In</h1>
      <%=form_tag "/session", method: :post, class:"block" do  %>
        <div class="form-group">
          <%= label_tag :email%><br>
          <%= text_field_tag :email, nil, class:"form-control", type:"email"%>
        </div>
        <div class="form-group">
          <%= label_tag :password%><br>
          <%= password_field_tag :password, nil, class:"form-control"%>
        </div>
       
        <%=submit_tag "Sign In", class:"btn btn-secondary btn-lg btn-block"%>
      <%end%>
      <div>
        <%= link_to "Sign in with Google", "/auth/google_oauth2" %>
      </div>
      <div>
        <%=link_to "Sign Up", sign_up_path%>
      </div>  
    </div>
    <div class="col-3"></div>
  </div>
</main>

